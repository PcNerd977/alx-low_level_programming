/*#include "main.h"*/
#include <stdio.h>
/**
 * rev_string - reverse the string contained in an array
 * @s: a pointer
 * Return: nothing
 */
void main(void)
{
	char s[15] = "My School";
	int i, j;
	int lenght = 0;
	char tmp;

	for (i = 0; s[i] != '\0'; i++)
		lenght += 1;
	printf("Total lenght is: %d\n", lenght);
	printf("lenght / 2 is: %d\n", lenght / 2);

	for (j = 0; j < (lenght / 2); j++)
	{
		printf("%c ", s[j]);
		printf("%c\n", s[lenght -1-j]);
		tmp = s[j];
		s[j] = s[lenght - j];
		s[lenght - j] = tmp;
	}
	printf("%s", s);
}
